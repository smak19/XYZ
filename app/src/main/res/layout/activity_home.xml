<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/hometoolbar"
                    style="?actionBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/Pista"
                    app:title="Home Page" />

                <TextView
                    android:id="@+id/amazonName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:text="YOGDAAN"
                    android:textAlignment="center"
                    android:textColor="#37078C"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amazonDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="Experience the joy of Giving..."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp" />


                <LinearLayout
                    android:id="@+id/row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/clothingCard"
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/clothingImage"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/clothing" />

                        <TextView
                            android:id="@+id/clothingName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:text="Clothes"
                            android:textAlignment="center"
                            android:textColor="@color/lavendar"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/foodcard"
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp">


                        <ImageView
                            android:id="@+id/elecImage"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/food" />

                        <TextView
                            android:id="@+id/elecName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:text="Food"
                            android:textAlignment="center"
                            android:textColor="@color/lavendar"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/bloodcard"
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"

                        app:cardCornerRadius="20dp">

                        <TextView
                            android:id="@+id/homeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:text="Blood"
                            android:textAlignment="center"
                            android:textColor="@color/lavendar"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/homeImage"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/blood" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/grocerycard"
                        android:layout_width="160dp"
                        android:layout_height="140dp"

                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp">

                        <TextView
                            android:id="@+id/beautyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:text="Grocery"
                            android:textAlignment="center"
                            android:textColor="@color/lavendar"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/beautyImage"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/grocery" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/moneycard"
                        android:layout_width="160dp"
                        android:layout_height="140dp"

                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp">

                        <TextView
                            android:id="@+id/moneyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:text="MONEY"
                            android:textAlignment="center"
                            android:textColor="@color/lavendar"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/moneyImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"
                            android:text="COMING SOON"
                            android:textSize="30dp"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bookcard"
                        android:layout_width="160dp"
                        android:layout_height="140dp"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="20dp">

                        <TextView
                            android:id="@+id/grocName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:text="Books"
                            android:textAlignment="center"
                            android:textColor="@color/lavendar"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/grocImage"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/books" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Pista"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/toolbaritem" />


</androidx.constraintlayout.widget.ConstraintLayout>